{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "rootDir": "./"
  }
}
